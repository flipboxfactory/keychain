{% extends "_layouts/cp" %}

{% block actionButton %}
    <div class="btngroup submit first">
        <a class="btn submit add icon" href="{{ cpUrl('keychain/new') }}">Add New KeyChain key pair</a>
    </div>
{% endblock %}

{% block sidebar %}
    <nav>
        <ul>
            <li class="heading"><span>Menu</span></li>
            <li>
                <a href="{{ cpUrl(baseCpPath) }}" class="sel">
                    <span class="label">KeyChain List</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block content %}
    <div class="elements">
        <div class="tableview">
            <table class="data fullwidth">
                <thead>
                <tr>
                    <td scope="col" data-attribute="id">ID</td>
                    <td scope="col" data-attribute="description">Description</td>
                    <td scope="col" data-attribute="dateCreated">Date Created</td>
                    <td scope="col" data-attribute="dateUpdated">Date Updated</td>
                </tr>
                </thead>
                <tbody>
                {% for keypair in keypairs %}
                    <tr data-id="">
                        <td data-title="ID">{{ keypair.id }}</td>
                        <td data-title="description">
                            <div class="element small hasstatus "
                                 data-status="active" data-url="{{ cpUrl('keychain/' ~ keypair.id) }}"
                                 data-level="" data-editable="">
                                <span class="status {% if keypair.enabled %}active{% else %}inactive{% endif %}"></span>
                                <div class="label">
                                    <span class="title">
                                        <a href="{{ cpUrl(baseCpPath ~'/' ~ keypair.id) }}">{{ keypair.description }}</a>
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td data-title="Date Created">{{ keypair.dateCreated|date }}</td>
                        <td data-title="Date Updated">{{ keypair.dateUpdated|date }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
